<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
           <!-- CSS only -->
            
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
            

        {% endblock %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <!-- JavaScript Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
            <script src="https://static.doubleclick.net/instream/ad_status.js "></script>   

       
    </head>

<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
            <!-- top nav -->
            <div class="container-fluid">
                
                    <a class="navbar-brand" href="{{path('menu')}}">Les Parcours</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" role="button" id="dropdownAdminButton" data-bs-toggle="dropdown"  aria-expanded="false">
                                    Administration
                                </a>
                            
                                <ul class="dropdown-menu" aria-labelledby="dropdownAdminButton">
                                    <li>
                                        <a class="dropdown-item" href="{{path('gerer_parcour')}}">Gérer les parcours</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{path('gerer_sortie')}}">Gérer les type de sorties</a>
                                    </li>
                                   
                                    
                                    {% if is_granted('ROLE_super_admin') %}
                                        <li>
                                            <a type="button" class="dropdown-item" href="{{path('gerer_user')}}">Gérer les utilisateur</a>
                                        </li>
                                    {% endif %}
                                    
                                </ul> 
                            </li>
                            

                        {% endif %}
                    </ul>
                    <div class="d-flex">
                        {% if app.user %}            
                            <a type="button" class="btn btn-danger me-2" href="{{path('app_logout')}}">Déconnexion</a>
                        {% else %}
                        <ul class="dropdown" >
                            <a type="button" class="btn btn-success me-2" data-bs-toggle="dropdown" aria-expanded="false">Connexion</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownAdminButton" id="dropdown-login" style="width: 500px">
                                <form  method="post">
                                    {% if app.user %}
                                        <div class="mb-3">
                                            Vous êtes déjà connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}

                                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                                    <label for="inputNom">Nom</label>
                                    <input type="text"  name="nom" id="inputNom" class="form-control" autocomplete="username" required autofocus>
                                    <label for="inputPassword">Password</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                                    <input type="hidden" name="_csrf_token"
                                        value="{{ csrf_token('authenticate') }}">
                                    <p></p>
                                    <button class="btn btn-lg btn-primary" type="submit">
                                        Connexion
                                    </button>
                                </form>
                            </div> 
                        </ul>
                            
                        {% endif %}  
                    </div>
                </div>
            </div>
        </nav>

    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </body>
</html>
