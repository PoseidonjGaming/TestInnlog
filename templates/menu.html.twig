{% extends 'base.html.twig' %}
{% block title %}Menu{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .font { font-size:19px}
</style>
<h1>Liste des parcours</h1>
<a class="btn btn-success" href="{{ path('addparcour')}}" role="button">Ajouter</a>
<div class="row">
    {% for unParcour in parcours %}
        <div class="col mb-3">
            <div class="card mb-4" style="width: 30rem;">
                <div class="card-body">
                    <div class="font">
                        <div class="row">
                            <div class="col mb-6">
                                <p>{{unParcour.user.username}}</p>
                                {% set vitesse = unParcour.distance  / unParcour.duree * 60 %}
                                <p> vitesse moyenne: {{vitesse|round(2,'floor')}} km/h</p>
                                <p> Commentaire: {{unParcour.commentaire}} </p>
                                <a class="btn btn-warning" href="{{ path('modifparcour', {'id': unParcour.id }) }}" role="button">Modifier</a>
                                <a class="btn btn-danger" href="{{ path('supprparcour', {'id': unParcour.id }) }}" role="button">Supprimer</a>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}           
</div>
{% endblock %}